# #---Dropdown/Scratchpad Windows---# #
for_window [instance="chatbox"] floating enable
for_window [instance="chatbox"] resize set 900 600
for_window [instance="chatbox"] move scratchpad
for_window [instance="chatbox"] border pixel 5
exec --no-startup-id st -n chatbox -e ~/bin/start-chat
bindsym $mod+y			[instance="chatbox"] scratchpad show; [instance="chatbox"] move position center

# #---Dropdown/Scratchpad Windows---# #
