# Basic binds
super + Return
  alacritty
super + shift + Return
  alacritty
super + a
  rofi -show window
super + s
  rofi -show ssh
super + d
  rofi -show run
super + shift + d
  rofi -show drun
super + r
  alacritty -e ranger

# Media keys XF86AudioPlay
  playerctl play-pause
XF86AudioNext
  playerctl next
XF86AudioPrev
  playerctl previous
XF86AudioLowerVolume
  pactl set-sink-volume $(pactl list sinks short | pcregrep --color -o1 '^(\d+)\s+.+RUNNING') -5%
XF86AudioRaiseVolume
  pactl set-sink-volume $(pactl list sinks short | pcregrep --color -o1 '^(\d+)\s+.+RUNNING') +5%
#
# brightness keybindings
XF86MonBrightness{Up,Down}
	xbacklight {-inc,-dec} 10

# # media keys
# XF86Audio{Next,Prev,Play,Stop}
# 	mpc {next,prev,toggle,stop}

# # volume
# XF86Audio{RaiseVolume,LowerVolume}
# 	amixer -q sset Master,0 {'5+','5-'}
# XF86AudioMute
# 	amixer -q sset Master,0 toggle

# system
super + {F1,F2,F3}
  systemctl {poweroff,reboot,suspend}

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

super + shift + Escape
  bspc wm -r

# gaps
super + g
  bspc config window_gap 0
super + shift + g
  bspc config window_gap 10

# bspwm hotkeys

# quit/restart bspwm
#super + shift + {q,r}
# bspc {quit,wm -r}

# close and kill
super + shift + q
  bspc node -{c,k}

# alternate between the tiled and monocle layout
super + space
  bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,shift + t}
  bspc node -t {tiled,pseudo_tiled}

super + {_, shift +} f
  bspc node -t {fullscreen,floating}

# set the node flags
super + ctrl + {F5,F6,F7,F8}
  bspc node -g {marked,locked,sticky,private}

super + F9
  bspc node -g hidden

super + F10
  whid
#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}
#
# move a floating window
super + ctrl + {h,j,k,l}
  bspc node -v {-20 0,0 20,0 -20,20 0}

# focus the next/previous desktop in the current monitor
super + {q,e}
  bspc node -f {next,prev}.local.!hidden.window

# focus the last node/desktop
super + {_,shift + }{Tab}
  bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1,2,3,4,5,6,7,8,9,0}
  bspc {desktop -f,node -d} '{I,II,III,IV,V,VI,VII,VIII,IX,X}'

super + {_,shift + } {v,n,b,m,c}
  bspc {desktop -f,node -d} {Virt,iNterface,Browser,Mx,Code}
