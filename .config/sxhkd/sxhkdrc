# Basic binds
super + Return
  $TERMINAL
super + shift + Return
  tmuxmanager
super + a
  rofi -show window
super + s
  rofi -show ssh
super + d
  rofi -show run
super + shift + d
  rofi -show drun
super + r
  $TERMINAL -e ranger
super + q
  $BROWSER
#super + c
#  code-oss; sleep 1;

# Function keys
# Show readme
super + F5
  mymaster

# Media keys
XF86AudioPlay
  playerctl play-pause
XF86AudioNext
  playerctl next
XF86AudioPrev
	playerctl previous
XF86AudioLowerVolume
  pactl set-sink-volume $(pactl list sinks short | pcregrep --color -o1 '^(\d+)\s+.+RUNNING') -5%
XF86AudioRaiseVolume
  pactl set-sink-volume $(pactl list sinks short | pcregrep --color -o1 '^(\d+)\s+.+RUNNING') +5%
